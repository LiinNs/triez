require "rbconfig"
require "fileutils"
include FileUtils

so_file = "ext/triez.#{RbConfig::CONFIG['DLEXT']}"
src_files = Dir.glob('ext/*.{h,c,cc}')
vendor_files = %w[hat-trie marisa-trie]

desc "glob src for gem redist"
task :glob_src => vendor_files do
  hat_files = Dir.glob('hat-trie/src/*.{h,c}').select do |f|
    !(%w[common.h misc.c].include? File.basename(f))
  end
  cp hat_files, 'ext/hat-trie'
  cp 'hat-trie/COPYING', 'ext/hat-trie'

  system "rsync --delete -vur --exclude .svn/ marisa-trie/lib/marisa/ ext/marisa-trie/marisa"
  cp 'marisa-trie/lib/marisa.h', 'ext/marisa-trie'
  cp 'marisa-trie/COPYING', 'ext/marisa-trie'
end

desc "download hat source"
file 'hat-trie' do
  sh 'git clone git://github.com/dcjones/hat-trie.git'
end

desc "download marisa source"
file 'marisa-trie' do
  sh 'svn checkout http://marisa-trie.googlecode.com/svn/trunk/ marisa-trie'
end

desc "run tests"
task :default => so_file do
  require_relative "test/triez_test.rb"
end

desc "build ext"
file so_file => src_files do
  cd 'ext'
  sh 'make'
end

desc "clean ext"
task :clean do
  cd 'ext'
  sh 'make clean'
  rm Dir.glob 'build/*.{o,a}'
end
